{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "types": ["node"]
    },
    "exclude": ["node_modules", "dist", "jest.config.ts", "tests"]
}
