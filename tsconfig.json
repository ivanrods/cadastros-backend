{
    "compilerOptions": {
      "lib": ["es2017", "esnext"],
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": ".",
      "esModuleInterop": true,
      "strict": true,
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["node_modules/@types"],
      "types": ["node", "express", "jest"]
    },
    "include": [
      "src/**/*.ts",
      "tests/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "jest.config.ts"
    ]
  }
  